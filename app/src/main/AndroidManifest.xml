<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pyzzalab.diodelmetalsoundboard">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-8764329147278404~3364005765"/>
        <activity
            android:name="com.pyzzalab.diodelmetalsoundboard.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="com.pyzzalab.diodelmetalsoundboard.PleaseRead"
            android:theme="@style/AppTheme.PleaseReadTheme"
            >
        </activity>
        <activity
            android:name="com.pyzzalab.diodelmetalsoundboard.LoadingScreenActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>